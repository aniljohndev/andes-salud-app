<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorFuente"
        android:text="TrÃ¡mites ONLINE"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imvInteracion"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/brown_circle_internacion" />

        <ImageView
            android:id="@+id/imvFormularios"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/brown_circle_formularios_especiales" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imvDocumentacion"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp" android:layout_marginRight="10dp"
            android:src="@drawable/brown_circle_documentacion" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imvIncorporar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/brown_circle_incorporar_familiar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="INCORPORAR \nFAMILIARES"
                android:textColor="@color/app_rhino"
                android:textSize="8sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imvReintegros"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp" android:layout_marginLeft="10dp"
            android:src="@drawable/brown_circle_reintegros" />
    </LinearLayout>
</LinearLayout>