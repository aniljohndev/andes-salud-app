                        android:textColor="@color/colorFuente"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="5dp"
                        android:text="1. Escribe la direccion  exacta"
                        android:textColor="@color/colorFuente"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/exactlocation1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:singleLine="true"
                        android:background="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="5dp"
                        android:text="2. Escribe tu celular:"
                        android:textColor="@color/colorFuente"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/dateselect2"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_40sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/button_border_little_round"
                        android:foreground="?selectableItemBackground"
                        android:text="Select Date"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_15ssp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/selecteddate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:singleLine="true"
                        android:background="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="5dp"
                        android:text="3. Ubica el indicador en tu location:"
                        android:textColor="@color/colorFuente"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/map_layout"

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"
                        android:layout_margin="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_15sdp">

                        <fragment
                            android:id="@+id/fragment_mapFragmentId_activity_get_location_filter1"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/add_location_map"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/button_border_little_round"
                    android:foreground="?selectableItemBackground"
                    android:text="Add Location"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_15ssp" />

                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:visibility="gone"
                    android:id="@+id/submit_button"
                    android:layout_marginTop="50dp"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border_little_round"
                    android:foreground="?selectableItemBackground"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Submit"
                    android:textAllCaps="false"
                    app:spinning_bar_width="4dp"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"/>
