                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/lblSeleccionarEspecialidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adjunter \Receta Medica"
                        android:textColor="@color/colorFuenteDesactivada" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/secondlayoutpharmacyly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/selectedBrown"
                        android:gravity="center_vertical"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                       >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="5dp"
                            android:text="2"
                            android:textColor="@color/colorFuente"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblEspecialidadSeleccionado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:text="Adjunter Receta Medica "
                            android:textColor="@color/colorFuente"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                       >

                        <ImageView
                            android:id="@+id/imagefromgallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_from_gallery" />

                        <ImageView
                            android:id="@+id/imagefromcamera"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_take_photo" />

                    </LinearLayout>
                  <!--  <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/selectedImageRecyclerview"
