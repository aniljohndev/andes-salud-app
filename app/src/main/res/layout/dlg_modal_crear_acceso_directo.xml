<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnMsgTotal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_yellow_dialog"
    android:layout_margin="10dp" android:padding="15dp" android:minWidth="300dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/lblMsg"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Â¿Desea crear un acceso directo en la pantalla principal?"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:textColor="#130657"/>
    <LinearLayout
        android:id="@+id/lnChkNoPreguntar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:id="@+id/chkNoMostrarMas"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:focusable="false"
            android:clickable="false"
            android:buttonTint="#130657"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No preguntar denuevo"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:textColor="#130657"
            android:focusable="false"
            android:clickable="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/btnSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_green_check"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/btnNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_red_cross"/>
    </LinearLayout>
</LinearLayout>