<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:minWidth="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_yellow_dialog"
    android:layout_margin="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_borde_sup_brown"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/turnos_sin_fondo"
            android:layout_marginTop="-7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="-7dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Fec. turno"
                android:fontFamily="sans-serif"
                android:textSize="12dp"
                android:textColor="@color/colorFuente"/>
            <TextView
                android:id="@+id/txtFecTurno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="Cod. Autoriz."
                android:fontFamily="sans-serif"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorFuente"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Profesional"
                android:fontFamily="sans-serif"
                android:textSize="12dp"
                android:textColor="@color/colorFuente"/>
            <TextView
                android:id="@+id/txtProfesional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Cod. Autoriz."
                android:fontFamily="sans-serif"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorFuente"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centro"
                android:fontFamily="sans-serif"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorFuente"/>
            <TextView
                android:id="@+id/txtCentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cod. Autoriz."
                android:fontFamily="sans-serif"
                android:textSize="12dp"
                android:layout_marginLeft="32dp"
                android:textStyle="bold"
                android:textColor="@color/colorFuente"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lblDomicilioTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Domicilio"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorFuente"
            />
        <LinearLayout
            android:id="@+id/lnDomicilio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/btnMapa"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/map_point_brown"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:id="@+id/txtDomPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cod. Autoriz."
                android:fontFamily="sans-serif"
                android:textSize="12dp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textColor="@color/colorFuente"
                android:layout_marginRight="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/txtCoseguro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cod. Autoriz."
                android:fontFamily="sans-serif"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorFuenteRoja"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnCancelarTurno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/close_circled" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCELAR TURNO" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnLblTurnoCacelado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lblTurnoCancelado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TURNO CANCEALDO"
                android:textColor="@color/colorFuenteRoja">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>