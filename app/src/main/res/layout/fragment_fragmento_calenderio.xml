<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="@dimen/_20sdp"
    android:background="@drawable/round_yellow_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
<!--    tools:context=".fragmentos.fragmento_calenderio"-->

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        app:headerColor="@color/barraBuzonAmarilloNotificacion"
        android:background="@drawable/round_yellow_dialog"
        app:type="one_day_picker"
        app:todayLabelColor="@color/barraBuzonAmarilloNotificacion"
        app:selectionColor="@color/barraBuzonAmarilloNotificacion"
        app:eventsEnabled="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView

            android:id="@+id/calender_nobtn"
             style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/_20sdp"
            android:text="Cancelar"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_12ssp"

            app:layout_constraintHorizontal_bias="0.832"
            app:layout_constraintStart_toStartOf="@+id/appointment_body"
            app:layout_constraintTop_toBottomOf="@+id/appointment_body" />
        <TextView

            android:id="@+id/calender_yesBtn"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/_20sdp"
            android:text="Guardar"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_12ssp"

            app:layout_constraintHorizontal_bias="0.832"
            app:layout_constraintStart_toStartOf="@+id/appointment_body"
            app:layout_constraintTop_toBottomOf="@+id/appointment_body" />


    </LinearLayout>

</LinearLayout>