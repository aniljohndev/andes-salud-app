<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/round_yellow_dialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/info_window_imagen"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:src="@drawable/map_point_brown"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            >


        <TextView
            android:id="@+id/info_window_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/colorFuente"
            android:text="Carlo Estrada Solano" />

        <TextView
            android:id="@+id/info_window_domicilio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingLeft="5dp"
            android:text="Placas: SX5487"
            android:textColor="@color/colorFuente"/>

        <TextView
            android:id="@+id/info_window_telefonos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_window_domicilio"
            android:layout_toRightOf="@id/info_window_imagen"
            android:paddingLeft="5dp"
            android:textSize="10sp"
            android:text="Estado: Activo"
            android:textColor="@color/colorFuente"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>