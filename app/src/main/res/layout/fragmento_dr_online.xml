                                      android:layout_height="wrap_content"
                                      android:textColor="@color/colorFuente"
                                      android:textStyle="bold"
                                      android:text=""
                                      android:layout_marginLeft="12dp"/>
                       f       </LinearLayout>
              -->
                <ListView
                    android:id="@+id/lstEspecialiad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|start"
                    android:background="@color/selectedBrown"
                    android:divider="@null"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/seetheDoctorBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@color/barraBuzonAmarilloNotificacion"
                    android:foreground="?selectableItemBackground"
                    android:text="Visualizar a todos los Doctores"
                    android:textColor="@color/defaultWindowBackground"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="visible"

                    />

                <TextView
                    android:id="@+id/chooseTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="sans-serif"
                    android:text="Clickea el nombre del doctor para ver sus horarios disponibles"
                    android:textAlignment="center"
                    android:textColor="#130657"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:visibility="gone"

                    />


                <LinearLayout
                    android:id="@+id/doctorListlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/selectedBrown"
                    android:baselineAligned="false"
                    android:orientation="vertical"

                    android:paddingBottom="3dp"
                    android:visibility="gone">

                    <ListView
                        android:id="@+id/lstDoctorlist"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:divider="@null" />
                    <!--<TextView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="DR JOHN DOE"
                        android:textStyle="bold"
                        android:textColor="@color/colorFuente"
                        android:textSize="15sp"
                        android:layout_marginLeft="60dp"/>-->
                    <!--
                                        <ImageView
                                            android:src="@drawable/round_green_btn"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:textColor="@color/colorFuente"
                                            android:layout_margin="@dimen/_10sdp"
                                            />
                    -->


                </LinearLayout>


                <TextView
                    android:id="@+id/doctorstimingstxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="sans-serif"
                    android:text="Elija los horarios del programa"
                    android:textAlignment="center"
                    android:textColor="#130657"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <ListView
                    android:id="@+id/lstDoctorschedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:divider="@null"
                    android:visibility="gone" />


            </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/side_soy_prestador" />
</RelativeLayout>


