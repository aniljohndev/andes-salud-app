<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnMsgTotal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_yellow_dialog_bg_brown"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="30dp"
        android:textColor="#130657"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="top">
        <ImageView
            android:id="@+id/imgIcono"
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:src="@drawable/ordenes_left_side"
            android:layout_gravity="top"
            android:layout_marginLeft="2dp"/>
        <TextView
            android:id="@+id/lblMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â¿Desea crear un acceso directo en la pantalla principal?"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textColor="#130657"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/btnSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_green_check"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/btnNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_red_cross"/>
    </LinearLayout>
</LinearLayout>