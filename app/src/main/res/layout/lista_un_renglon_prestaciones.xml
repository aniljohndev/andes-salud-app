<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#fff">
        <TextView android:id="@+id/txtCantidad"
            android:layout_weight=".1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:fontFamily="sans-serif"
            android:textSize="10dp"
            android:textColor="@color/colorFuenteNegra"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"/>
        <TextView android:id="@+id/txtPrestacion"
            android:layout_weight=".7"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="420101 Consulta en consultorio"
            android:fontFamily="sans-serif"
            android:textSize="10dp"
            android:textColor="@color/colorFuenteNegra"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"/>
        <TextView android:id="@+id/txtCoseguro"
            android:layout_weight=".2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="$1300"
            android:gravity="end"
            android:fontFamily="sans-serif"
            android:textSize="10dp"
            android:textColor="@color/colorFuenteNegra"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:id="@+id/lineaFin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_below="@+id/linea2"/>
</LinearLayout>