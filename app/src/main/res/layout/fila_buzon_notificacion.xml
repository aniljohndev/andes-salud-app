<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/lnMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">
        <ImageView
            android:id="@+id/imgTipo"
            android:layout_width="20dp"
            android:layout_height="65dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ordenes_left_side"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/idElemento"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/codTipo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:id="@+id/txtAfiliado"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:text="Raul Lucania"
                android:textColor="#545453"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/txtTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:fontFamily="sans-serif"
                android:text="Ambulatorio autorizado"
                android:layout_marginTop="4dp"
                android:textColor="#696866"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/lblSolicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solicitud:"
                    android:textSize="10dp"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#696866"/>
                <TextView
                    android:id="@+id/txtFecEmision"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:fontFamily="sans-serif"
                    android:text="15/08/2016 23:45"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="#696866"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/barraEstado"
            android:layout_width="5dp"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:background="@color/verdeAutorizado"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/lineaFin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="75dp"
        android:background="#919190"
        android:layout_marginBottom="3dp"/>
</LinearLayout>