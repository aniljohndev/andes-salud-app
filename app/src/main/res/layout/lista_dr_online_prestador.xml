<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="40dp"
    android:background="@color/selectedBrown">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".85">
        <TextView android:id="@+id/idFila"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"/>
        <TextView android:id="@+id/linea1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Linea1"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#130657"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/lnEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Estado:"
                    android:fontFamily="sans-serif"
                    android:textSize="12dp"
                    android:textColor="#130657"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="0dp"/>
                <TextView android:id="@+id/txtEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Linea1"
                    android:fontFamily="sans-serif"
                    android:textSize="12dp"
                    android:textColor="#130657"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnPacientesPorAtender"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Pacientes esperando:"
                    android:fontFamily="sans-serif"
                    android:textSize="12dp"
                    android:textColor="#130657"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="0dp"/>
                <TextView android:id="@+id/txtCantPacientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Linea1"
                    android:fontFamily="sans-serif"
                    android:textSize="12dp"
                    android:textColor="#130657"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btnVerHorarios"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:src="@drawable/btn_ver_horarios"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/btnIngresarSala"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:src="@drawable/btn_ingresar_sala"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".15">
        <ImageView
            android:id="@+id/led"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/led_verde"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>